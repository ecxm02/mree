# Environment variables for development
DATABASE_URL=postgresql://musicuser:musicpass@localhost:5433/musicdb
REDIS_URL=redis://localhost:6380/0
ELASTICSEARCH_URL=http://localhost:9201

# Spotify API credentials (get from https://developer.spotify.com/)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# JWT secret key (generate a secure random string)
JWT_SECRET_KEY=your_super_secret_jwt_key_here

# File storage paths
MUSIC_STORAGE_PATH=/app/music
IMAGE_STORAGE_PATH=/app/images

# Server configuration
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Rate limiting
MAX_DOWNLOADS_PER_HOUR=10
MAX_SEARCH_REQUESTS_PER_MINUTE=30

# Audio quality settings
DEFAULT_AUDIO_QUALITY=320
SUPPORTED_FORMATS=mp3,flac,ogg
